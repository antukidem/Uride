
<resources> 
  <!-- Base application theme. DarkActionBar-->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item> 
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
  </style> 
  
 <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  
  <style name="MyTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar"> 
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="URideTheme.ActionBar" parent="URideTheme">
    <item name="colorPrimary">@android:color/transparent</item>
  </style>
  
  <!-- Ultra Ride  theme. -->
  <style name="URideTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="android:windowBackground">@color/colorPrimary</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="UberTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/uberPrimary</item>
    <item name="colorPrimaryDark">@color/uberPrimaryDark</item>
    <item name="colorAccent">@color/uberAccentColor</item> 
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style> 

  <style name="UberTheme.ActionBar.Transparent" parent="UberTheme">
    <item name="colorPrimary">@android:color/transparent</item>
  </style>

  <!--style name="NavigationStyle" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/uberAccentColor</item>
    <item name="colorPrimaryDark">@color/uberAccentColor</item>
    <item name="colorAccent">@color/uberAccentColor</item>
  </style-->
  
  <style name="NavigationStyle" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="android:windowBackground">@color/colorPrimary</item>
    <item name="colorPrimary">@color/colorAccent</item>
    <!-- item name="colorPrimaryDark">@color/colorAccent</item -->
    <item name="colorAccent">@color/colorAccent</item>
  </style>
   
</resources>
